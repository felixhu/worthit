<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script type="text/javascript">
		var geocoder;
		var map
	      function initialize() {
		geocoder = new google.maps.Geocoder();
	          var mapOptions = {
	            zoom: 14,
	            center: new google.maps.LatLng(42.06, -87.68), 
	            mapTypeId: google.maps.MapTypeId.ROADMAP
	          };
	          map = new google.maps.Map(document.getElementById("recMap"),mapOptions);
			codeAddress()
	      }


		function codeAddress() {
		<% 
	$i=0

@recommendations.each do |listing| 


if $i > 10 then
      break
   end
$i +=1;
%>
var address = '<%=listing.address%>,Evanston,60201';
geocoder.geocode( { 'address': address}, function(results, status) {
  if (status == google.maps.GeocoderStatus.OK) {
    map.setCenter(results[0].geometry.location);
    var marker<%=$i%> = new google.maps.Marker({
        map: map,
        position: results[0].geometry.location
    });
 var iw<%=$i%> = new google.maps.InfoWindow({
   content: '<%=listing.address%>'
 });
google.maps.event.addListener(marker<%=$i%>, 'click', function() {
    iw<%=$i%>.open(map, marker<%=$i%>);
});
  } else {
    alert("Geocode was not successful for the following reason: " + status);
  }
});

	 <% end %>
  }
      function toggleShow() {
      	$('#show').toggle();
      	
		$('#HideBtn').toggle();
		$('#ShowBtn').toggle();
      }
      function toggleView() {
      	$('#recTable').toggle();
      	$('#recMap').toggle();
      	
		$('#MapBtn').toggle();
		$('#TableBtn').toggle();
      }
    </script>
	<style type="text/css">
			#recMap img{max-width:none}
		body { background-color: #ecf9f9;
		       background-image: url("/assets/back.png");

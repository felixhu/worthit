		.addr{text-align: left;}
		#recMap {
	        margin-left: 10px;
	        height: 360px;
	        width:280px;

			display:none;
		}
		#recTable {
			height:360px;
			overflow:scroll;
			overflow-y: scroll;
		 	overflow-x:hidden;
